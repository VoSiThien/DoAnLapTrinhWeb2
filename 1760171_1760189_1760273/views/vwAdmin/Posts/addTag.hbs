<div class="card">
  <div class="card-header">
    <h4>Thêm Tag</h4>
  </div>
  <div class="card-body">
    <form method="POST" action="/admin/Posts/addTag" style="width: 50%; margin-left: 20%">
      <div class="form-group" >
        <input type="text" class="form-control" id="BaiVietID" name="BaiVietID" value="{{this.row}}" hidden>
        <label for="TagName">Tên Tag</label>
        <input type="text" class="form-control" id="TenTag" name="TenTag" autofocus>
      </div>
      <a class="btn btn-success" href="/admin/Posts" role="button" title="Back to List">
        <i class="fa fa-backward" aria-hidden="true"></i>
      </a>
      <input type="submit" value="Submit" class="btn btn-primary">
    </form>
  </div>
</div>