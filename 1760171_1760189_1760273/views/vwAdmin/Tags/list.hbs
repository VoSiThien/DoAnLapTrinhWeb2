<div class="card">
  <div class="card-header">
    <h4>Danh sách Tag</h4>
  </div>
  <div class="card">
    <div class="card-header">
      <p><b>Nhập tên tag cần tìm:</b></p>
      <input id = "txtSearchTag" value = ""></input>
      <button class="btn btn-primary" role="button" onclick="addParent()">
        <i class="fa fa-search" aria-hidden="true"></i>
        Tìm kiếm
      </button>
    </div>
    <div id="mainContainer">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col">Tên Tag</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          {{#each this.List}}
          <tr>
            <th scope="row" class="text-center">{{id}}</th>
            <td>{{TenTag}}</td>
            <td class="text-right">
              <a class="btn btn-primary btn-sm" href="/admin/Tag/edit/{{id}}" role="button" title="Sửa Tag">
                <i class="fa fa-pencil" aria-hidden="true">sửa</i>
              </a>
              <a class="btn btn-danger btn-sm" href="/admin/Tag/del/{{id}}" role="button" title="Xóa Tag">
                <i class="fa fa-trash" aria-hidden="true">Xóa</i>
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>