<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title mb-4">
                    <div class="d-flex justify-content-start">
                        <div class="userData ml-3">
                            <h2 class="d-block" style="font-size: 1.5rem; font-weight: bold">Quản lý bài đăng</h2>
                        </div>
                        <div class="ml-auto">
                            <input type="button" class="btn btn-primary d-none" id="btnDiscard"
                                value="Discard Changes" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="isCheckedTab" data-toggle="tab" href="#control1"
                                    role="tab" aria-controls="control1" aria-selected="true">Bài viết đã duyệt và chờ
                                    xuất bản</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="unCheckedTab" data-toggle="tab" href="#control2" role="tab"
                                    aria-controls="control2" aria-selected="false">Bài viết chưa
                                    được duyệt</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="isPulishedTab" data-toggle="tab" href="#control3" role="tab"
                                    aria-controls="control3" aria-selected="false">Bài viết đã xuất
                                    bản</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="isDeniedTab" data-toggle="tab" href="#control4" role="tab"
                                    aria-controls="control4" aria-selected="false">Bài viết bị từ
                                    chối</a>
                            </li>
                        </ul>


                        <div class="tab-content ml-1" id="myTabContent">
                            {{!-- 1 --}}
                            <div class="tab-pane fade show active" id="basicInfo" role="tabpanel"
                                aria-labelledby="isCheckedTab">
                                <div class="row">
                                    {{#each this.List}}
                                    {{#if (isEqual this.TrangThaiID 1)}}
                                    <div class="col-sm-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <img class="card-img-top" src="/public/reporterImage/{{HinhAnh}}"
                                                    alt="Card image cap">
                                                <h4 class="card-title">{{TieuDe}}</h4>
                                                <p class="card-text"><b>Mô tả :</b>{{NoiDungTat}}</p>
                                                <p class="card-text"><b>Ngày xuất bản:</b> {{NgayXuatBan}}</p>
                                            </div>
                                            <div class="card-footer text-muted">
                                                <a name="detail" id="btnDetail" class="btn btn-primary btn-sm"
                                                    href="/post/detail/{{id}}" role="button">
                                                    <i class="fa fa-bullseye" aria-hidden="true"></i></i>
                                                    Xem chi tiết!
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{/each}}
                                </div>
                            </div>
                            {{!-- 2 --}}
                            <div class="tab-pane fade" id="control2" role="tabpanel" aria-labelledby="unCheckedTab">
                                <div class="row">
                                    {{#each this.List}}
                                    {{#if (isEqual this.TrangThaiID 2)}}
                                    <div class="col-sm-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <img class="card-img-top" src="/public/reporterImage/{{HinhAnh}}"
                                                    alt="Card image cap">
                                                <h4 class="card-title">{{TieuDe}}</h4>
                                                <p class="card-text"><b>Mô tả :</b>{{NoiDungTat}}</p>
                                                <p class="card-text"><b>Thời gian diễn ra:</b> {{NgayXuatBan}}</p>
                                            </div>
                                            <div class="card-footer text-muted">
                                                <a name="detail" id="btnDetail" class="btn btn-primary btn-sm"
                                                    href="/post/detail/{{id}}" role="button">
                                                    <i class="fa fa-bullseye" aria-hidden="true"></i></i>
                                                    Xem chi tiết!
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{/each}}
                                </div>
                            </div>
                            {{!-- 3 --}}
                            <div class="tab-pane fade" id="control3" role="tabpanel" aria-labelledby="isPulishedTab">
                                <div class="row">
                                    {{#each this.List}}
                                    {{#if (isEqual this.TrangThaiID 3)}}
                                    <div class="col-sm-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <img class="card-img-top" src="/public/reporterImage/{{HinhAnh}}"
                                                    alt="Card image cap">
                                                <h4 class="card-title">{{TieuDe}}</h4>
                                                <p class="card-text"><b>Mô tả :</b>{{NoiDungTat}}</p>
                                                <p class="card-text"><b>Thời gian diễn ra:</b> {{NgayXuatBan}}</p>
                                            </div>
                                            <div class="card-footer text-muted">
                                                <a name="detail" id="btnDetail" class="btn btn-primary btn-sm"
                                                    href="/post/detail/{{id}}" role="button">
                                                    <i class="fa fa-bullseye" aria-hidden="true"></i></i>
                                                    Xem chi tiết!
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{/each}}
                                </div>
                            </div>
                            {{!-- 4 --}}
                            <div class="tab-pane fade" id="control4" role="tabpanel" aria-labelledby="isDeniedTab">
                                <div class="row">
                                    {{#each this.List}}
                                    {{#if (isEqual this.TrangThaiID 4)}}
                                    <div class="col-sm-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <img class="card-img-top" src="/public/reporterImage/{{HinhAnh}}"
                                                    alt="Card image cap">
                                                <h4 class="card-title">{{TieuDe}}</h4>
                                                <p class="card-text"><b>Mô tả :</b>{{NoiDungTat}}</p>
                                                <p class="card-text"><b>Thời gian diễn ra:</b> {{NgayXuatBan}}</p>
                                            </div>
                                            <div class="card-footer text-muted">
                                                <a name="detail" id="btnDetail" class="btn btn-primary btn-sm"
                                                    href="/post/detail/{{id}}" role="button">
                                                    <i class="fa fa-bullseye" aria-hidden="true"></i></i>
                                                    Xem chi tiết!
                                                </a>
                                                <a name="detail" id="btnDetail" class="btn btn-danger btn-sm"
                                                    href="/reporter/edit/{{id}}" role="button">
                                                    <i class="fa fa-adjust" aria-hidden="true"></i>
                                                    Hiệu chỉnh
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    {{/if}}
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{#section 'css'}}
<style>
    .image-container {
        position: relative;
    }

    .image {
        opacity: 1;
        display: block;
        width: 100%;
        height: auto;
        transition: .5s ease;
        backface-visibility: hidden;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .image-container:hover .image {
        opacity: 0.3;
    }

    .image-container:hover .middle {
        opacity: 1;
    }
</style>
{{/section}}