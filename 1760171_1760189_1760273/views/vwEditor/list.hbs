<div class="card">
    <div class="card-header">
        <h3>Danh sách bài viết chờ duyệt</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width: 30%">Tiêu đề</th>
                    <th scope="col" style="width: 30%">Tóm tắt</th>
                    <th scope="col" style="width: 22%">Tác giả</th>
                    <th scope="col" style="width: 18%">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.List}}
                <tr>
                    <td><b>{{{TieuDe}}}</b></td>
                    <td>{{{NoiDungTat}}}</td>
                    <td>{{ButDanh}}</td>
                    <td class="text-right">
                        <a class="btn btn-primary btn-sm" href="/admin/QLBaiViet/detail/{{id}}" role="button" title="">
                            <i class="fa fa-pencil" aria-hidden="true">Chi tiết</i>
                        </a>
                        <a class="btn btn-success btn-sm" href="/admin/QLBaiViet/XuatBan/{{id}}" role="button" title="">
                            <i class="fa fa-registered" aria-hidden="true">Duyệt</i>
                        </a>
                        <a class="btn btn-danger btn-sm" href="/admin/QLBaiViet/XuatBan/{{id}}" role="button" title="">
                            <i class="fa fa-trash" aria-hidden="true">Từ chối</i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>