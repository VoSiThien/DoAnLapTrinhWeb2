<div class="card">
  <div class="card-header">
    <h4>Danh sách Tag</h4>
  </div>
<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>Tag</h4>
    <a class="btn btn-outline-success" href="/admin/QLTag/add" role="button">
      <i class="fa fa-plus" aria-hidden="true"></i>
      Thêm Tag
    </a>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Tên Tag</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each this.lists}}
      <tr>
        <th scope="row" class="text-center">{{id}}</th>
        <td>{{TenTag}}</td>
        <td class="text-right">
          <a class="btn btn-primary btn-sm" href="/admin/QLTag/edit/{{id}}" role="button" title="Sửa Tag">
            <i class="fa fa-pencil" aria-hidden="true">sửa</i>
          </a>
          <a class="btn btn-danger btn-sm" href="/admin/QLTag/del/{{id}}" role="button" title="Xóa Tag">
            <i class="fa fa-trash" aria-hidden="true">Xóa</i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>